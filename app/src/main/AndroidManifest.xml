<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vidit.movienary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/startup_icon_round"
        android:label="ShowBuzz"
        android:roundIcon="@mipmap/startup_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoActionBar">
        </activity>
        <activity
            android:name=".SearchActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".DetailsActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ReviewsActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ImageActivity"
            android:theme="@style/ImageTheme" />
        <activity
            android:name=".TvShowsActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".TvShowDetailsActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ActorDetailsActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".WatchListActivity"
            android:label="Watchlist"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".YoutubeActivity"
            android:theme="@style/ImageTheme"/>
        <activity android:name=".SplashScreenActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>